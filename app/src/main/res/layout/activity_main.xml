<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="?colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/appBarLayout"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="1.0">

            <LinearLayout
                android:id="@+id/LLcamera"
                android:layout_width="350.0dip"
                android:layout_height="fill_parent"
                android:background="@android:drawable/alert_light_frame"
                android:orientation="vertical"
                android:weightSum="1.0">

                <Switch
                    android:id="@+id/networksw"
                    android:layout_width="fill_parent"
                    android:layout_height="42.0dip"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:switchMinWidth="30.0dip"
                    android:text="服务器"
                    android:textAlignment="center"
                    android:textOff="断开"
                    android:textOn="已连接"
                    android:textSize="18.0sp" />


                <com.driverhelper.widget.LiveSurfaceView
                    android:id="@+id/surfaceView"
                    android:layout_width="320dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:padding="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLGroup1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="710.0dip"
                    android:layout_height="273.0dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/LLmingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="122.0dip"
                            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                            android:orientation="horizontal"
                            android:weightSum="1.0">

                            <ImageButton
                                android:id="@+id/JiaoLianButton"
                                android:layout_width="100.0dip"
                                android:layout_height="100.0dip"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/main_img05" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:weightSum="1.0">

                                <TextView
                                    android:id="@+id/JiaoLianTEXT"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:background="@android:color/holo_orange_light"
                                    android:gravity="center"
                                    android:text="教练员"
                                    android:textAlignment="viewStart"
                                    android:textSize="18.0sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/COACHNUMtext"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/IDCARDtext"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:textSize="24sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/XueYuanButton"
                                android:layout_width="100.0dip"
                                android:layout_height="100.0dip"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/main_img03" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="30.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:background="@android:color/holo_orange_light"
                                    android:gravity="center"
                                    android:text="学员"
                                    android:textAlignment="viewStart"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/XueYuanTEXT"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:gravity="center"
                                    android:textAlignment="viewStart"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/STUNUMtext"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="10.0dip"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:textSize="24dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/NoSendText"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center|top"
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="18.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLgps"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lat"
                                android:layout_width="190.0dip"
                                android:layout_height="wrap_content"
                                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                                android:gravity="center"
                                android:maxLength="12"
                                android:singleLine="true"
                                android:text="纬度 :"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18.0sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/direction"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                                android:gravity="center"
                                android:text="方向 :"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lon"
                                android:layout_width="190.0dip"
                                android:layout_height="wrap_content"
                                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                                android:gravity="center"
                                android:maxLength="12"
                                android:singleLine="true"
                                android:text="经度 :"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18.0sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/speed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                                android:gravity="center"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:text="距离 :"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewStat"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                            android:gravity="center"
                            android:textAlignment="viewStart"
                            android:textColor="?actionModeSplitBackground"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextClock
                            android:id="@+id/textViewThisTime"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                            android:format24Hour="yyyy/dd/MM hh:mm:ss"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="24.0sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewStartTime"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="?actionModeSplitBackground"
                            android:textSize="18.0sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="710.0dip"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="000.0 km/h"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewRPM"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="000 RPM"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="00000 m"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="0:00:00"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="36.0sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
</android.support.v4.widget.DrawerLayout>